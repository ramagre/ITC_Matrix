@using ITC_Matrix.Common;
@model IEnumerable<ITC_Matrix.Models.pref>
@{
    ViewBag.Title = "PrefsController";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Menu = "admin";
    ViewBag.SubMenu = "prefsNode";
}

@*Including the js file*@

<script src="~/Assets/js/Prefs.js"></script>

<style>
    .displayNone {
        display: none;
    }
</style>

@using (@Html.BeginForm("Index", "Prefs", FormMethod.Post))
{
    @Html.Hidden("name")
    @Html.Hidden("value")
    @Html.Hidden("monthName")
    <section class="mainTable-right">
        <section class="filterRow">

            <h3>@ITC_Matrix.Common.Functions.GetTranslation((int)CommonEnum.Translation.System_Defaults)</h3>

        </section>
        <section class="clear"></section>
        @if (ViewBag.PrefsMessage != null)
        {
            <section class="@ViewBag.Class">@ViewBag.PrefsMessage</section>
        }

        <table width="100%" border="0" id="tbl" cellspacing="0" cellpadding="0" class="gridTable tableFixed-none">
            <thead>
                <tr class="gridHeading">

                    <th width="50px" style="text-align:left;">@ITC_Matrix.Common.Functions.GetTranslation((int)CommonEnum.Translation.Property)</th>

                    <th colspan="3" width="150px" style="text-align:left;">@ITC_Matrix.Common.Functions.GetTranslation((int)CommonEnum.Translation.Value)</th>
                </tr>
            </thead>
            <tbody class="scrollContent">
                @foreach (var item in Model)
                {
                    <tr id="@item.name">
                        <td width="100px">
                            @{
                                if (item.name == "skincss")
                                {
                                    <span>@Html.Raw("Theme") </span>
                                }
                                else if (item.name == "reportsFrom")
                                {
                                    <span> @Html.Raw(" Reports From Address") </span>
                                }
                                else if (item.name == "debug")
                                {
                                    <span> @Html.Raw("Debug Status") </span>
                                }
                                else if (item.name == "ytd_day")
                                {
                                    <span> @Html.Raw("Year to date starts") </span>
                                }

                                else if (item.name == "maxRows")
                                {
                                    <span>@Html.Raw("Max Rows in List View") </span>
                                }

                                else if (item.name == "matrixKey")
                                {
                                    <span>@Html.Raw("Matrix Key") </span>
                                }

                                else if (item.name == "sessionName")
                                {
                                    <span>@Html.Raw("Session Name") </span>
                                }

                                else if (item.name == "sessionIdle")
                                {
                                    <span>@Html.Raw("Session Idle Timeout") </span>
                                }

                                else if (item.name == "langdefault")
                                {
                                    <span>@Html.Raw("Default Language") </span>
                                }

                                else if (item.name == "htmldocpdfstore")
                                {
                                    <span>@Html.Raw("Reports: Cache Storage") </span>
                                }

                                else if (item.name == "htmldocbaseurl")
                                {
                                    <span>@Html.Raw("Reports: HTMLDOC Base URL") </span>
                                }

                                else if (item.name == "ldapPort")
                                {
                                    <span>@Html.Raw("Active Directory Port") </span>
                                }

                                else if (item.name == "htmldocpath")
                                {
                                    <span>@Html.Raw("Reports: HTMLDOC Path") </span>
                                }

                                else if (item.name == "htmldocsiterootstore")
                                {
                                    <span>@Html.Raw("Reports: Cache Site Root Store") </span>
                                }
                              
                                    else if (item.name == "globalMenus")
                                {
                                    <span> @Html.Raw("Global Menus") </span>
                                }
                                else if (item.name == "firstDayOfWeek")
                                {
                                    <span>@Html.Raw("Dates: First Day of the Week") </span>
                                            }
                                else if (item.name == "db")
                                {
                                    <span>@Html.Raw("Database") </span>
                                }
                                else if (item.name == "ldapHost")
                                {
                                    <span>@Html.Raw("LdapHost") </span>
                                }

                                else if (item.name == "languages")
