                                    <input type="reset" value="cancel" id="btnglobalMenusCancel" class="displayNone" style="width:80px;float:left;margin:3px" />
                                </td>
                            }

                            else if (item.name == "htmldocbaseurl")
                            {
                                <td width="100px">
                                    <label id="lblhtmldocbaseurl">@item.value</label>
                                    <input type="text" id="txthtmldocbaseurl" value="@item.value" class="displayNone" />

