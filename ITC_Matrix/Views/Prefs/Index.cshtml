                                    <input type="reset" value="cancel" id="btnhtmldocsiterootstoreCancel" class="displayNone" style="width:80px;float:left;margin:3px" />
                                </td>
                            }
                            else if (item.name == "languages")
                            {
                                <td width="100px">
                                    @Html.DisplayFor(modelItem => item.value)
                                </td>
                            }
                            else if (item.name == "ldapHost")
                            {
                                <td width="100px">
                                    <label id="lblldapHost">@item.value</label>
                                    <input type="text" id="txtldapHost" value="@item.value" class="displayNone" />

                                    <input type="submit" value="save" id="btnldapHostSave" class="displayNone" style="width:80px;float:left;margin:3px" />
                                    <input type="reset" value="cancel" id="btnldapHostCancel" class="displayNone" style="width:80px;float:left;margin:3px" />
                                </td>
                            }
                            else if (item.name == "ldapPort")
                            {
                                <td width="100px">
                                    <label id="lblldapPort">@item.value</label>
                                    <input type="text" id="txtldapPort" value="@item.value" class="displayNone" />

                                    <input type="submit" value="save" id="btnldapPortSave" class="displayNone" style="width:80px;float:left;margin:3px" />
                                    <input type="reset" value="cancel" id="btnldapPortCancel" class="displayNone" style="width:80px;float:left;margin:3px" />
                                </td>
                            }
                            else if (item.name == "ldapUse")
                            {
                                <td width="100px">
                                    <label id="lblldapUse">@item.value</label>
                                    <span id="ddllstldapUse">
                                        @Html.DropDownList("ddlldapUse", null, new { @Class = "displayNone" })
                                    </span>

                                    <input type="submit" value="save" id="btnldapUseSave" class="displayNone" style="width:80px;float:left;margin:3px" />
                                    <input type="reset" value="cancel" id="btnldapUseCancel" class="displayNone" style="width:80px;float:left;margin:3px" />

                                </td>
                            }
                            else if (item.name == "matrixdb_version")
                            {
                                <td width="100px">
                                    <label id="lblversion">@item.value</label>
                                    <input type="text" id="txtversion" value="@item.value" class="displayNone" />

                                    <input type="submit" value="save" id="btnversionSave" class="displayNone" style="width:80px;float:left;margin:3px" />
                                    <input type="reset" value="cancel" id="btnversionCancel" class="displayNone" style="width:80px;float:left;margin:3px" />
                                </td>
                            }
                            else if (item.name == "matrixKey")
                            {
                                <td width="100px">
                                    <label id="lblmatrixKey">@item.value</label>
                                    <input type="text" id="txtmatrixKey" value="@item.value" class="displayNone" />

                                    <input type="submit" value="save" id="btnmatrixKeySave" class="displayNone" style="width:80px;float:left;margin:3px" />
                                    <input type="reset" value="cancel" id="btnmatrixKeyCancel" class="displayNone" style="width:80px;float:left;margin:3px" />

                                </td>
                            }
                            else if (item.name == "maxRows")
                            {
                                <td width="100px">
                                    <label id="lblmaxRows">@item.value</label>
                                    <input type="text" id="txtmaxRows" value="@item.value" class="displayNone" />

                                    <input type="submit" value="save" id="btnmaxRowsSave" class="displayNone" style="width:80px;float:left;margin:3px" />
                                    <input type="reset" value="cancel" id="btnmaxRowsCancel" class="displayNone" style="width:80px;float:left;margin:3px" />
                                </td>
                            }
                            else if (item.name == "sessionIdle")
                            {
                                <td width="100px">
                                    <label id="lblsessionIdle">@item.value <text>minutes</text></label>
                                    <input type="text" id="txtsessionIdle" value="@item.value" class="displayNone" />

                                    <input type="submit" value="save" id="btnsessionIdleSave" class="displayNone" style="width:80px;float:left;margin:3px" />
                                    <input type="reset" value="cancel" id="btnsessionIdleCancel" class="displayNone" style="width:80px;float:left;margin:3px" />
                                </td>
                            }
                            else if (item.name == "sessionName")
                            {
                                <td width="100px">
                                    <label id="lblsessionName">@item.value</label>
                                    <input type="text" id="txtsessionName" value="@item.value" class="displayNone" />

                                    <input type="submit" value="save" id="btnsessionNameSave" class="displayNone" style="width:80px;float:left;margin:3px" />
                                    <input type="reset" value="cancel" id="btnsessionNameCancel" class="displayNone" style="width:80px;float:left;margin:3px" />
                                </td>
                            }

                            else if (item.name == "reportsPath")
                            {
                                <td width="100px">
                                    <label id="lblreportsPath">@item.value</label>

                                    <input type="text" id="txtreportsPath" value="@item.value" class="displayNone" />

                                    <input type="submit" value="save" id="btnreportsPathSave" class="displayNone" style="width:80px;float:left;margin:3px" />
                                    <input type="reset" value="cancel" id="btnreportsPathCancel" class="displayNone" style="width:80px;float:left;margin:3px" />

                                </td>
                            }

                            else if (item.name == "timer")
                            {
                                <td width="100px">
                                    <label id="lbltimer">@item.value</label>
                                    <span id="ddlslttimer">
                                        @Html.DropDownList("ddlltimer", null, new { @class = "displayNone" })
                                    </span>
                                    <input type="submit" value="save" id="btntimerSave" class="displayNone" style="width:80px;float:left;margin:3px" />
                                    <input type="reset" value="cancel" id="btntimerCancel" class="displayNone" style="width:80px;float:left;margin:3px" />

                                </td>
                            }

                            else if (item.name == "skincss")
                            {
                                <td width="100px">
                                    @*<label id="lblthemes">@item.value</label>*@
                                    @{
                                        if (@ViewBag.themeName != null)
                                        {
                                            <label id="lblthemes">@ViewBag.themeName</label>
                                        }

                                    }

                                    <span id="ddlsltthemes">
                                        @Html.DropDownList("themes", "Default Theme")
                                    </span>
                                    <input type="submit" value="save" id="btnthemesSave" class="displayNone" style="width:80px;float:left;margin:3px" />
                                    <input type="reset" value="cancel" id="btnthemesCancel" class="displayNone" style="width:80px;float:left;margin:3px" />
                                </td>
                                        }

                                        else if (item.name == "langdefault")
                                        {
                                            <td width="100px">
                                                <label id="lblLanguages">@item.value</label>
                                                <span id="ddlsltLanguages">
                                                    @Html.DropDownList("languages", (SelectList)ViewBag.languages, new { @class = "displayNone", @id = "ddlLanguages" })
                                                </span>

                                                <input type="submit" value="save" id="btnlanguageSave" class="displayNone" style="width:80px;float:left;margin:3px" />
                                                <input type="reset" value="cancel" id="btnlanguageCancel" class="displayNone" style="width:80px;float:left;margin:3px" />
                                            </td>
                                        }
                                        else if (item.name == "Dates: Default Format")
                                        {
                                            <td width="100px">
                                                <label>@item.value</label>
                                            </td>
                                        }
                                        else if (item.name == "Dates: Default Format (jQuery Equiv)")
                                        {
                                            <td width="100px">
                                                <label>@item.value</label>
                                            </td>
                                        }
                                        else if (item.name == "firstDayOfWeek")
                                        {
                                            <td width="100px">
                                                @{
                                                    if (item.value == "1")
                                                    {
                                                        <label id="weekDays">@Html.Raw("sunday")</label>
                                                    }
                                                    else if (item.value == "2")
                                                    { <label id="weekDays">@Html.Raw("monday")</label> }
                        else if (item.value == "3")
                        {  <label id="weekDays">@Html.Raw("tuesday")</label>}
                        else if (item.value == "4")
                        { <label id="weekDays">@Html.Raw("wednesday")</label> }
                        else if (item.value == "5")
                        { <label id="weekDays">@Html.Raw("thursday")</label> }
                        else if (item.value == "6")
                        { <label id="weekDays">@Html.Raw("friday")</label> }
                        else if (item.value == "7")
                        {  <label id="weekDays">@Html.Raw("saturday")</label>}

                                                }
                                                <span id="ddllstWeekDays">
                                                    @Html.DropDownList("ddlweek", null, new { @class = "displayNone" })
                                                </span>

                                                <input type="submit" value="save" id="btnweekDaysSave" class="displayNone" style="width:80px;float:left;margin:3px" />
                                                <input type="reset" value="cancel" id="btnweekDaysCancel" class="displayNone" style="width:80px;float:left;margin:3px" />

                                            </td>
                                                    }
                                                    else if (item.name == "Show Report Logo")
                                                    {
                                                        <td width="100px">
                                                            <label id="lblreportLogo">@item.value</label>
                                                            <span id="dddlstReportLogo">
                                                                @Html.DropDownList("ddlReportLogo", null, new { @class = "displayNone" })
                                                            </span>

                                                            <input type="submit" value="save" id="btnreportLogoSave" class="displayNone" style="width:80px;float:left;margin:3px" />
                                                            <input type="reset" value="cancel" id="btnreportLogoCancel" class="displayNone" style="width:80px;float:left;margin:3px" />

                                                        </td>
                                                    }

                                                    else if (item.name == "Financial Day Starts")
                                                    {
                                                        <td width="100px">
                                                            <label>@item.value</label>
                                                        </td>
                                                    }

                                                    else if (item.name == "ytd_day")
                                                    {
                                                        <td width="100px">

                                                            <label id="lblyearstart">@Html.Raw(string.Concat(ViewBag.selectedDay, "/", ViewBag.monthName))</label>
                                                            <section class="balanceDate">
                                                                <span id="ddllstMonth">
                                                                    @*@Html.DropDownList("Month", (SelectList)ViewBag.Month, new { @class = "displayNone" })*@
                                                                    @Html.DropDownList("Month")
                                                                </span>
                                                            </section>
                                                            <section class="balanceDate">
                                                                <span id="ddllstMonthName">
                                                                    @Html.DropDownList("selectedMonth")
                                                                </span>
                                                            </section>
                                                            <input type="submit" value="save" id="btnlblyearstartSave" class="displayNone" style="width:80px;float:left;margin:3px" />
                                                            <input type="reset" value="cancel" id="btnlblyearstartCancel" class="displayNone" style="width:80px;float:left;margin:3px" />

                                                        </td>
                                                    }
