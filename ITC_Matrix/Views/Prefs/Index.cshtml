                                        @Html.DropDownList("ddldeepdebug", null, new { Class = "displayNone" })
                                    </span>

                                    <input type="submit" value="save" id="btndeepdebugSave" class="displayNone" style="width:80px;float:left;margin:3px" />
                                    <input type="reset" value="cancel" id="btndeepdebugCancel" class="displayNone" style="width:80px;float:left;margin:3px" />

                                </td>
                            }

                            else if (item.name == "globalMenus")
